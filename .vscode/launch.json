    "version": "0.2.0",
    "configurations": [{
            "type": "node2",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/src/index.js",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/babel-node",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "env": {
                "NODE_ENV": "development"
